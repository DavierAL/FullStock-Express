<section class="product">
  <div class="container product__container">
    <div class="product__image">
      <img
        src="<%= product.imgSrc %>"
        alt="<%= product.name %>"
        class="product__image_content"
      />
    </div>
    <div class="product__info">
      <h1 class="product__title"><%= product.name %></h1>
      <p class="product__price">S/ <%= (product.price / 100).toFixed(2) %></p>
      <p class="product__description"><%= product.description %></p>
      <form method="post" action="/cart/add-product">
        <input type="hidden" name="productId" value="<%= product.id %>">
        <input type="hidden" name="pathProduct" value="/product/<%= product.id%>" >
        <button class="button button--xl product__button" type="submit" >
          Agregar al Carrito
        </button>
      </form>
      <div class="separator product__separator"></div>
      <div class="product__features">
        <h2 class="product__features_title">Caracter√≠sticas</h2>
        <ul class="product__features_list">
          <% product?.features.forEach((feature, index)=> { %>
            <li id="feat-<%= index %>">
              <%= feature %>
            </li>
          <% }) %>
        </ul>
      </div>
    </div>
  </div>
</section>
